#include <iostream>
#define N 20
#include <cmath>
using namespace std;

int main()
{
	double X[N] = { 1,-1,12,8,1,2,9,-5,7,1,2,-2,5,6,7,-5,2,14,4,14 };
	for (int i = 0; i < N; i++)
	{
		cout << X[i] << " ";
	}
	cout << endl;

	int m = X[0]; int b = X[0];
	int mI = 0; int bI = 0;
	for (int i = 0; i < N; i++)
	{
		if (m > X[i])
		{
			m = X[i];
			mI = i + 1;
		}
		if (b < X[i])
		{
			b = X[i];
			bI = i + 1;

		}
	}
	cout << "min=" << m << " " << mI << endl;
	cout << "max=" << b << " " << bI << endl;
	double average;
	average = (double)(m + b) / 2;
	cout << average << endl;
	for (int i = 0; i < N; i++)
	{
		if ((mI != i) && (X[i] == m))
		{
			X[i] = (double)average;
		}
	
		if ((bI != i) && (X[i] == b))
		{
			X[i] = (double)average;
		}
		
		cout << X[i] << " ";
	}
	
	SredeArif = (double)(b+m)/2;
cout<<"srednee arifmeticheskoe="<<SredneArif;
cout<<endl;

}


